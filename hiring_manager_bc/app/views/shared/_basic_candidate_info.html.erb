<div class="info_container">
    <div class="row">
        <div class="col-md-6">
            <label>User Id</label>
        </div>
        <div class="col-md-6">
            <p><%= @application.user_id %></p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <label>Name</label>
        </div>
        <div class="col-md-6">
            <p><%= @candidate.name %></p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <label>Email</label>
        </div>
        <div class="col-md-6">
            <p><%= @candidate.email %></p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <label>Phone</label>
        </div>
        <div class="col-md-6">
            <p><%= @application.contact_number %></p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <label>Status</label>
        </div>
        <div class="col-md-6">
            <p><%= @application.status %></p>
        </div>
    </div>
</div>